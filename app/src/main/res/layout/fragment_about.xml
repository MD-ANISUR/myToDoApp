    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about"
    android:layout_gravity="center"
    android:layout_marginTop="56sp"
    android:layout_marginBottom="56sp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="35sp">

        <TextView
            android:gravity="center"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:textColor="#F39203"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:text="Developer Name:\nMd. Anisur Rahman\n\nEducation:\nUnted International University(UIU)\nUnited City, Madane Avenue, Badda, Dhaka\nEmail: mrahman191191@bscse.uiu.ac.bd" />
