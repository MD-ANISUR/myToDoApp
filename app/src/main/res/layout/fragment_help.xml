<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about"
    android:layout_gravity="center"
    android:layout_marginTop="56sp"
    android:layout_marginBottom="56sp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="35sp">

        <TextView
            android:gravity="center"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help2"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:textColor="#FF9800"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_help_24" />


            <TextView
                android:justificationMode="inter_word"
                android:layout_marginTop="20dp"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="There is 4 fragments:\n\n1. Add Task: You can add your task to task list.\n\n2. My Task: All of your task will stay here. If you swap right the task will added to pending fragment.\n\n3. Pending Task: All of your pending task will stay here. If you swap right the task will added to completed fragment and a notification will pop up.\n\n4. Completed Task: All of your completed task will stay here. If you swap right the task will delete."/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>